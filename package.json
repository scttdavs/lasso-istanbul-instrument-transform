{
  "name": "lasso-istanbul-instrument-transform",
  "version": "0.0.3",
  "description": "Lasso.js transform that instruments code for istanbul",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run mocha && npm run lint",
    "lint": "eslint .",
    "mocha": "mocha --timeout 5000 --reporter spec",
    "cover": "rm -rf ./coverage && istanbul cover _mocha -- --timeout 5000 -R spec ./test/*.js",
    "coverreport": "open ./coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scttdavs/lasso-istanbul-instrument-transform.git"
  },
  "author": "scttdavs",
  "license": "ISC",
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.15.0",
    "mocha": "^3.2.0"
  },
  "dependencies": {
    "istanbul-lib-instrument": "^1.4.2",
    "lasso-resolve-from": "^1.2.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "lasso",
    "istanbul",
    "ES6",
    "ES5"
  ],
  "bugs": {
    "url": "https://github.com/scttdavs/lasso-istanbul-instrument-transform/issues"
  }
}
